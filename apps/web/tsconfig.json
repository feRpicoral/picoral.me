{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "module": "esnext",
    "jsx": "preserve",
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmitOnError": true,
    "noImplicitReturns": false,
    "noImplicitOverride": true,
    "noFallthroughCasesInSwitch": true,
    "incremental": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@icons/*": [
        "./src/icons/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@themes/*": [
        "./src/themes/*"
      ],
      "@hooks/*": [
        "./src/hooks/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "files": [
    "next-env.d.ts",
    ".eslintrc.js",
    "next.config.js"
  ],
  "exclude": [
    "node_modules",
    ".next",
    ".turbo"
  ]
}
